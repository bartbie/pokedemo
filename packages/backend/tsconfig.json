{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": [
        "../../tsconfig.base.json"
    ],
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "references": [
        {
            "path": "../common"
        }
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "nodenext"
        }
    }
}
