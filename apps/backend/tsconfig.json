{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "skipLibCheck": true,
        "preserveSymlinks": false,
        "baseUrl": "./src",
        "paths": {
            "$lib/*": [
                "lib/*"
            ],
            "$env": [
                "./env"
            ]
        },
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
